<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatarEscogido"
                android:layout_width="108dp"
                android:layout_height="157dp"
                android:layout_gravity="center"/>




            <ImageView
                android:id="@+id/insecto1"
                android:layout_width="108dp"
                android:layout_height="147dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/i1"/>
            <ImageView
                android:id="@+id/animal1"
                android:layout_width="108dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/m1"/>

            <ImageView
                android:id="@+id/animal2"
                android:layout_width="108dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/m2" />

            <ImageView
                android:id="@+id/insecto2"
                android:layout_width="108dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/i2" />

            <ImageView
                android:id="@+id/insecto3"
                android:layout_width="108dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/i3" />

            <ImageView
                android:id="@+id/animal3"
                android:layout_width="108dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/m3" />

            <Button
                android:id="@+id/btn_validar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validar" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>